<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorIconPrimary">@color/colorIconPrimary</item>
        <item name="colorIconSecondary">@color/colorIconSecondary</item>

        <!--Typography-->
        <item name="textAppearanceHeadline4">@style/TextAppearance.LinkNotes.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.LinkNotes.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.LinkNotes.Headline6</item>
        <item name="textAppearanceHeadline7">@style/TextAppearance.LinkNotes.Headline7</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.LinkNotes.Subtitle1</item>
        <item name="textAppearanceSubtitle1Bold">@style/TextAppearance.LinkNotes.Subtitle1.Bold</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.LinkNotes.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.LinkNotes.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.LinkNotes.Body2</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>